<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome2"
    android:background="@drawable/welcome2_0"
    >

    <Button
        android:id="@+id/signupw"
        android:layout_width="315dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/b"

        android:drawableRight="@drawable/trendingbleu"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:text="Sign up"
        android:textColor="@color/colorAccent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signinw"
        app:layout_constraintVertical_bias="0.3"
        tools:ignore="MissingConstraints,DuplicateClickableBoundsCheck"
        tools:visibility="visible" />

    <Button
        android:id="@+id/signinw"
        android:layout_width="315dp"

        android:layout_height="72dp"
        android:layout_above="@+id/signupw"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="508dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/but"
        android:drawableRight="@drawable/ic_trending_neutral_24dp"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:text="Sign in"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>